<Window x:Class="KR2RPM5.View.AddEditInventoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KR2RPM5.View"
        mc:Ignorable="d"
        Title="AddEditInventoryWindow" Height="470" Width="500">
	<Grid Margin="15" Background="OldLace">
		<StackPanel>
			<TextBlock Text="{Binding Title}" FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>

			<Label Content="Артикул:" FontFamily="Century Gotic"/>
			<TextBox x:Name="txtArticle" Height="25" Margin="0,0,0,10"/>

			<Label Content="Название:" FontFamily="Century Gotic"/>
			<TextBox x:Name="txtName" Height="25" Margin="0,0,0,10"/>

			<Label Content="Тип:" FontFamily="Century Gotic"/>
			<TextBox x:Name="txtType" Height="25" Margin="0,0,0,10"/>

			<Label Content="Описание:" FontFamily="Century Gotic"/>
			<TextBox x:Name="txtDescription" Height="60" AcceptsReturn="True" TextWrapping="Wrap" Margin="0,0,0,10"/>

			<Label Content="Дата выпуска:" FontFamily="Century Gotic"/>
			<DatePicker x:Name="dpReleaseDate" Height="25" Margin="0,0,0,15"/>

			<Button Content="Сохранить" Background="Tan" FontFamily="Century Gotic" Height="30" Click="SaveButton_Click"/>
		</StackPanel>
	</Grid>
</Window>
